{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "./**/*.ts",
        "./@types/**/*.d.ts"
    ]
}